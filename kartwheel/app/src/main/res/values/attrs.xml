<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ItemView">
        <attr name="src" format="reference" />
        <attr name="title" format="string" />
        <attr name="description" format="string" />
    </declare-styleable>
    <declare-styleable name="GameInfoPlayerView">
        <attr name="playerName" format="string" />
        <attr name="playerNumber" format="integer" />
        <attr name="isUser" format="boolean" />
    </declare-styleable>
    <declare-styleable name="TopCourseTimeView">
        <attr name="rank" format="integer" />
    </declare-styleable>

    <declare-styleable name="AnchoredBottomSheetBehavior">
        <attr name="anchorPoint" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KartTextView">
        <attr name="typeface" format="enum">
            <enum name="regular" value="1" />
            <enum name="light" value="2" />
            <enum name="extraLight" value="3" />
            <enum name="medium" value="4" />
            <enum name="bold" value="5" />
            <enum name="semiBold" value="6" />
            <enum name="extraBold" value="7" />
            <enum name="black" value="8" />
            <enum name="phosphate" value="9" />
            <enum name="zamenhof" value="10" />
        </attr>
    </declare-styleable>

    <declare-styleable name="KartButton">
        <attr name="loadingSpinnerColor" format="reference" />
        <attr name="loadingSpinnerWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
</resources>