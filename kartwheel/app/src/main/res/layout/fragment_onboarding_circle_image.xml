<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <us.handstand.kartwheel.layout.CircularImageView
        android:id="@+id/image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_white_circle"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:src="@drawable/onboarding_camera" />

    <us.handstand.kartwheel.layout.KartTextView
        android:id="@+id/imageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_selfie_tap_to_change" />
</LinearLayout>