CREATE TABLE ticket (
    id TEXT NOT NULL PRIMARY KEY,
    code TEXT,
    claimedAt TEXT,
    eventId TEXT,
    forfeitedAt TEXT,
    paymentId TEXT,
    playerId TEXT,
    priceTierId TEXT,
    purchasedAt TEXT,
    purchaserId TEXT,
    teamId TEXT,
    updatedAt TEXT
);

select_all:
SELECT *
FROM ticket
WHERE code=?;

select_for_player:
SELECT *
FROM ticket
WHERE playerId=?;